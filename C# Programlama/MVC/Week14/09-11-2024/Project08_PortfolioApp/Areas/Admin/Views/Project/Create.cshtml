@model AddProjectViewModel

@{
    ViewData["Title"] = "Create";
}
<div class="col-12">
    <div class="bg-light rounded h-100 p-4">
        <div class="d-flex justify-content-between align-items-center">
            <h6 class="">Yeni Proje</h6>
            <a asp-area="Admin" asp-controller="Project" asp-action="Index" class="btn btn-info btn-sm">Vazgeç</a>
        </div>

        <form asp-asp-area="Admin" asp-controller="Project" asp-action="Create" method="post">
            <div class="row">
                <div class="col-md-8 col-sm-6">
                    <!--Formun Sol tarafı --->
                    <div class="mb-3">
                        <label class="form-label">Proje Adı</label>
                        <input asp-for="Name" class="form-control">
                        <span  class="text-danger" asp-validation-for="Name"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Proje Açıklaması</label>
                        <input asp-for="Description" class="form-control">
                        <span class="text-danger" asp-validation-for="Description"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Proje Github Linki</label>
                        <input asp-for="GithubUrl" class="form-control">
                    </div>
                    <div class="mb-3 form-check">
                        <input asp-for="IsActive" class="form-check-input">
                        <label class="form-check-label">Aktif</label>
                    </div>
                </div>
                <div class="col-md-4 col-sm-6">
                    <!--Formun Sağ tarafı --->
                    <div>
                        <label class="form-label">Kategori</label>
                        <select asp-for="CategoryId" asp-item="@Model.CategoryList" class="form-select mb-3">
                            
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="image" class="form-label">Resim ekle</label>
                        <input asp-for="Image"class="form-control" type="file" id="image" multiple>
                        <img class="m-3" width="250px" id="image-preview" src="">
                    </div>
                </div>

            </div>







            <button type="submit" class="btn btn-primary">Kaydet</button>
        </form>
    </div>
</div>





@section ScriptsSection{
    <script>
        $("#image").on("change",function(e){
            const selectedFiles = e.target.files;
            $("#image-preview").attr("src",window.URL.createObjectURL(selectedFiles[0]))
        })
    </script>
}
