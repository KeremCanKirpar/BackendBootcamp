@model IEnumerable<Project>?
@{
    ViewData["Title"] = "Index";
}

<div class="col-12">
    <div class="bg-light rounded h-100 p-4">
       <div class="d-flex justify-content-between align-items-center">
            <h6 class="mb-4">Projelerim</h6>
            <a asp-area="Admin" asp-controller="Project" asp-action="Create" class="btn btn-primary btn-sm">Yeni Proje</a>
       </div>

        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Resim</th>
                        <th scope="col">Proje</th>
                        <th scope="col">Kategori</th>
                        <th scope="col">Aktif</th>
                        <th scope="col">İşlemler</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var p in Model)
                    {
                        <tr>
                            <th scope="row">@p.Id</th>
                            <td><img src="@p.ImageUrl" width="60px" alt=""></td>
                            <td>@p.Name</td>
                            <td>@p.CategoryId</td>
                            <td>@p.IsActive</td>
                            <td>
                                <a asp-area="admin" asp-controller="Project" asp-route-id="@p.Id" class="btn btn-warning btn-sm">Düzenle</a>
                                <a asp-area="admin" asp-controller="Project" asp-route-id="@p.Id"
                                    class="btn btn-danger btn-sm">Sil</a>
                            </td>

                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
